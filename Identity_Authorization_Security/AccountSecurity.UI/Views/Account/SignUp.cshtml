@model SignUpDTO;

@{
    ViewBag.Title = "SignUp";
    ViewBag.CurrentUrl = "~/Account/SignUp";
}


<div class="login-iframe">

    <div class="body-login">

        <div class="login">
            <form asp-controller="Account" asp-action="SignUp">
                <h2>Sign up</h2>
                <div class="box">
                    <p>Person Name</p>
                    <input asp-for="PersonName" />
                </div>
                <div class="box">
                    <p>Account Name</p>
                    <input asp-for="AccountName" />
                </div>
                <div class="box">
                    <p>Email</p>
                    <input asp-for="Email" />
                </div>
                <div class="box">
                    <p>Phone Number</p>
                    <input asp-for="Phone" />
                </div>
                <div class="box">
                    <p>Password</p>
                    <input asp-for="Password" />
                </div>
                <div class="box">
                    <p>Confirm Password</p>
                    <input asp-for="ConfirmPassword" />
                </div>
                
                <button class="btnLogin">Signup</button>

                <div class="query">
                    <p>Have an <a asp-controller="Account" asp-action="Login">Account</a></p>

                    <div asp-validation-summary="All" style="color:Tomato;"></div>
                @*   @if (ViewBag.Errors != null)
                    {
                        <div style="color:Tomato;">
                            <ul>
                                @foreach (string error in ViewBag.Errors)
                                {
                                    <li class="ml">@error</li>
                                }
                            </ul>
                        </div>
                    }*@
                </div>
            </form>
        </div>
    </div>
</div>

